<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivMovieImageDetails"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvTitleDetails"
        android:layout_below="@+id/ivMovieImageDetails"
        app:layout_marginStartPercent = "2%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginTopPercent="2%"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleDetails"
        android:numStars="5"
        android:stepSize="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvOverViewDetails"
        android:layout_below="@+id/ratingBar"
        app:layout_marginStartPercent = "2%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginTopPercent="2%"
        android:textColor="@android:color/white"
        android:textStyle="italic" />

</android.support.percent.PercentRelativeLayout>